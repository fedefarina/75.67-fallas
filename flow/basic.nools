define Question {
    id : null,
    ans : null
}

// 1ra Pregunta
// Glucosa plasmatica

rule Q1A1 { // Menos de 99,5
    when {
        q: Question (q.id == 0 && q.ans == 0);
    } then {
        emit('puntaje', 2);
    }
}

rule Q1A2 { // 99,5 a 132,6
    when {
        q: Question (q.id == 0 && q.ans == 1);
    } then {
        emit('puntaje', 4);
    }
}

rule Q1A3 { // mas de 132,6
    when {
        q: Question (q.id == 0 && q.ans == 2);
    } then {
        emit('puntaje', 4);
    }
}

